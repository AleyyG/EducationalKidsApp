<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/background"
        android:layout_width="449dp"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/gradient_background"
        tools:ignore="MissingConstraints" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/colorGame"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/color_game_anim" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/numbersGame"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="40dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toEndOf="@+id/colorGame"
        app:layout_constraintTop_toTopOf="@+id/colorGame"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/number_game_anim" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mathGame"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbersGame"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_maths" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animalGame"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/mathGame"
        app:layout_constraintTop_toBottomOf="@+id/colorGame"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animal_game_anim" />

    <ImageView
        android:id="@+id/matchingGame"
        android:layout_width="153dp"
        android:layout_height="135dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animalGame"
        app:srcCompat="@drawable/fill_trefoil" />

</androidx.constraintlayout.widget.ConstraintLayout>